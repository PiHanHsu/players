      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>

<h1> </h1>
<div class="form-group form-inline">
	<%= f.label :first_name, "First Name" %><br>
	<%= f.text_field :first_name, :class => "form-control", :placeholder => "Input First Name" %>
</div>

<div class="form-group form-inline">
	<%= f.label :last_name, "Last Name" %><br>
	<%= f.text_field :last_name, :class => "form-control", :placeholder => "Input Last Name" %>
</div>

<div class="form-group form-inline">
	<%= f.label :number, "Jersey Number" %><br>
	<%= f.number_field :number, :class => "form-control", :placeholder => "# Number" %>
</div> 

<div class="form-group form-inline">
	<%= f.label :birthday, "Birthday" %><br>
	<%= f.date_select :birthday , :start_year => 1978 , :end_year => 2000 ,:class => "form-control" %>
</div> 

<div class="form-group form-inline">

	<%= f.label :team, "Team" %><br>
	<%= f.text_field :team, :class => "form-control",:placeholder => "Chicago Bulls" %>

</div>

