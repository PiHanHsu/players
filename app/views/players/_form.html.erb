	<%= f.label :position, "Position" %><br>

    <%= f.radio_button :position, "Center" %>
	<%= f.label :position, "Center" %><br>
	<%= f.radio_button :position, "Forward" %>
	<%= f.label :position_forward, "Forward" %><br>
	<%= f.radio_button :position, "Guard" %>
	<%= f.label :position_guard, "Guard" %><br>
	
</div>

<div class="form-group form-inline">
	<%= f.label :experience, "Exp years" %><br>
